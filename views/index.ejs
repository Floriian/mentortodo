<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo App</title>
    <link rel="stylesheet" href="css/bootstrap.min.css" />
  </head>
  <body>
    <div class="d-flex w-100 flex-column align-items-center">
        <h4>Simple TODO APP</h4>
        <form class="form-section border p-2" method="POST" action="/">
            <div class="row mb-3 form-group">
                <label for="title" class="col-form-label form-label col-3 text-end">Title</label>
                <div class="col-9">
                    <input type="text" class="form-control"/>
                </div>
            </div>
            <div class="row mb-3 form-group m-2">
                <label for="title" class="form-label">Description</label>
                <textarea type="text" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-success w-100">Create</button>
        </form>
    </div>
    <div class="container">
      <% for(let todo of todos) { %>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"> <%= todo.title %> </h5>
            <p>Completed: <%= todo.completed %></pÃ³>
            <p><%= todo.description %></p>
          </div>
          <div class="card-footer d-flex justify-content-between w-100">
            <form method="DELETE" action="/<%= todo.id %>">
              <button class="btn btn-danger">Delete</button>
            </form>
            <form method="PATCH" action="/<%= todo.id%>">
              <button class="btn btn-success">Mark as <%= todo.title === true ? 'uncompleted' : 'completed' %></button>
            </form>
          </div>
        </div>
      <% } %>


    </div>
    </div>
  </body>
</html>
